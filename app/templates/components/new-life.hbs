{{#if addNewLife}}
  <h1>New Life</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="type">Type</label>
        {{input value=type id="type"}}
      </div>

      <div class="form-group">
        <label for="age">Age</label>
        {{input value=age id="age"}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image"}}
      </div>

      <button {{action 'saveLife'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'lifeFormShow'}}>New Life</button>
{{/if}}
